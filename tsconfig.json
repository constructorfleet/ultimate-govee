{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "target": "ES2022",
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ES2022",
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "lib",
    "moduleResolution": "Node",
    "paths": {
      "~ultimate-govee-common": ["./common"],
      "~ultimate-govee-common/*": ["./common/*"],
      "~ultimate-govee-data": ["./data"],
      "~ultimate-govee-data/*": ["./data/*"],
      "~ultimate-govee-domain": ["./domain"],
      "~ultimate-govee-domain/*": ["./domain/*"],
      "~ultimate-govee-persist": ["./persist"],
      "~ultimate-govee-persist/*": ["./persist/*"],
    },
  },
  "include": ["lib/*"],
  "exclude": [".vscode/", ".idea/", "**/*.spec.ts", "persisted/", "assets/"],
}

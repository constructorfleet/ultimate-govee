{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "target": "ES2021",
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "lib",
    "rootDir": "./lib",
    "paths": {
      "@constructorfleet/ultimate-govee/*": ["./*"],
    },
  },
  "include": ["lib/*"],
  "exclude": [".vscode/", ".idea/", "**/*.spec.ts", "persisted/", "assets/"],
}

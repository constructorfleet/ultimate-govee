{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "target": "ES2021",
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021"
    ],
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": "./lib",
    "paths": {
      "@constructorfleet/ultimate-govee/*": ["./*"]
    }
  },
  "include": ["lib/**/*.spec.ts"],
  "exclude": [".vscode/", ".idea/"]
}
